<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/monster_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/monster_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularView" />


    <ImageView
        android:id="@+id/card_mana_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/hexagon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/holo_blue_dark" />


    <TextView
        android:id="@+id/card_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/monster_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"
        android:text="Card Description"
        />

    <ImageView
        android:id="@+id/card_attack_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pentagon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="5dp"
        app:tint="@android:color/holo_red_dark"
        />

    <TextView
        android:id="@+id/card_attack_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK"
        android:textSize="5sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="@id/card_attack_img"
        app:layout_constraintEnd_toEndOf="@+id/card_attack_img"
        app:layout_constraintBottom_toBottomOf="@id/card_attack_img"
        app:layout_constraintTop_toTopOf="@id/card_attack_img"
    />


    <TextView
        android:id="@+id/card_attack_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="4sp"
        app:layout_constraintTop_toBottomOf="@+id/card_attack_txt"
        app:layout_constraintStart_toStartOf="@+id/card_attack_txt"
        app:layout_constraintEnd_toEndOf="@+id/card_attack_txt"
        />

    <ImageView
        android:id="@+id/card_defense_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"
        app:tint="@android:color/holo_blue_dark"
        />

    <TextView
        android:id="@+id/card_defense_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEF"
        android:textSize="5sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="@id/card_defense_img"
        app:layout_constraintEnd_toEndOf="@+id/card_defense_img"
        app:layout_constraintBottom_toBottomOf="@id/card_defense_img"
        app:layout_constraintTop_toTopOf="@id/card_defense_img"
        />

</androidx.constraintlayout.widget.ConstraintLayout>